<form action="/posts/<%= @post.id %>" method="POST">

  <input id="hidden" type="hidden" name="_method" value="patch"><br>

  <label>Name:</label><br>
  <input type="text" value="<%= @post.name %>" name="name"><br>
  <label>Contents:</label><br>
  <input type="text" value="<%= @post.content %>" name="content"><br>

  <input type="submit" value="submit"><br>

</form>
